		cin>>score2[i];
	}

	for(i=0;i<n;i++){
		for(j=0;j<(n-i-1);j++){
			if(score1[j]<score1[j+1])
			{  
				temp = score1[j];
				score1[j] = score1[j+1];
				score1[j+1] = temp;
			}
		}
	}
		cout<<"\nSorted score of Player 1:";
